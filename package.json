{
  "name": "@aave-tech/aave-governance-v2",
  "version": "1.0.0",
  "description": "Aave Governance v2 smart contracts",
  "scripts": {
    "run-env": "npm run load:npm && npm i && tail -f /dev/null",
    "hardhat": "hardhat",
    "compile": "SKIP_LOAD=true hardhat compile",
    "compile:force": "npm run compile -- --force",
    "compile:force:quiet": "npm run compile:force -- --quiet",
    "test": "npm run compile:force:quiet && TS_NODE_TRANSPILE_ONLY=1 hardhat test",
    "coverage": "SKIP_LOAD=true npx hardhat typechain && node --max_old_space_size=6144 node_modules/.bin/hardhat coverage",
    "dev:prettier": "prettier --write .",
    "ci:test": "npm run compile:force:quiet && npm run test",
    "ci:clean": "rm -rf ./artifacts ./cache ./types ./coverage*",
    "migrate:dev": "npm run compile:force:quiet && hardhat migrate:dev",
    "load:npm": "npm config set @aave-tech:registry https://gitlab.com/api/v4/projects/19392283/packages/npm/ && npm config set '//gitlab.com/api/v4/packages/npm/:_authToken' ${GITLAB_ACCESS_TOKEN} && npm config set '//gitlab.com/api/v4/projects/19392283/packages/npm/:_authToken' ${GITLAB_ACCESS_TOKEN}",
    "types-gen": "hardhat typechain"
  },
  "devDependencies": {
    "@nomiclabs/buidler-waffle": "2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@openzeppelin/contracts": "3.1.0",
    "@typechain/ethers-v4": "1.0.0",
    "@typechain/ethers-v5": "^1.0.0",
    "@typechain/truffle-v4": "2.0.2",
    "@typechain/truffle-v5": "2.0.2",
    "@typechain/web3-v1": "1.0.0",
    "@types/chai": "4.2.11",
    "@types/lowdb": "1.0.9",
    "@types/mocha": "7.0.2",
    "@types/node": "14.0.5",
    "bignumber.js": "9.0.0",
    "buidler-gas-reporter": "^0.1.4",
    "buidler-typechain": "0.1.1",
    "chai": "4.2.0",
    "chai-bignumber": "3.0.0",
    "chai-bn": "^0.2.1",
    "dotenv": "^8.2.0",
    "eth-sig-util": "2.5.3",
    "ethereum-waffle": "3.0.2",
    "ethereumjs-util": "7.0.2",
    "ethers": "5.0.8",
    "globby": "^11.0.1",
    "hardhat": "^2.0.2",
    "hardhat-gas-reporter": "^1.0.0",
    "hardhat-typechain": "^0.3.3",
    "husky": "^4.2.5",
    "lowdb": "1.0.0",
    "prettier": "^2.0.5",
    "prettier-plugin-solidity": "^1.0.0-alpha.53",
    "pretty-quick": "^2.0.1",
    "solidity-coverage": "^0.7.12",
    "tmp-promise": "^3.0.2",
    "ts-generator": "0.0.8",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typechain": "2.0.0",
    "typescript": "^3.9.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "author": "Aave",
  "publishConfig": {
    "@aave-tech:registry": "https://gitlab.com/api/v4/projects/22299695/packages/npm/"
  },
  "dependencies": {
    "@aave/aave-token": "^1.0.4",
    "googleapis": "^39.2.0",
    "solc": "^0.8.1",
    "truffle-hdwallet-provider": "^1.0.17"
  }
}
